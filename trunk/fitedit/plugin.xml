<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="fitedit.editors.FitnesseEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            default="true"
            filenames="content.txt"
            icon="icons/icon_doc.gif"
            id="fitedit.editors.FitnesseEditor"
            name="Fitnesse Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="fitedit.preferences.FitPreferencePage"
            id="fitedit.preferences.FitPreferencePage"
            name="Fitnesse Editor Preferences">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="fitedit.preferences.PreferenceInitializer">
      </initializer>
   </extension>

</plugin>
